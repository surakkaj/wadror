<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
	<% if @beer.ratings.empty?  %>
		This beer has no ratings!
	<% elsif @beer.ratings.count != 1  %>
	Has
		<%=  @beer.ratings.count %> ratings, average <%= @beer.average_rating %>
	<% else %>
	Has
		<%=  @beer.ratings.count %> rating, average <%= @beer.average_rating %>
	<% end %>

	<% if current_user %>

		<h4>give a rating;</h4>
		<%= form_for(@rating) do |f| %>
		<%= f.hidden_field :beer_id %>
		score: <%= f.number_field :score %>
		<%= f.submit %>
		<% end %>
</p>
<%= link_to 'Edit', edit_beer_path(@beer) %> |
<% end %>
<%= link_to 'Back', beers_path %>
