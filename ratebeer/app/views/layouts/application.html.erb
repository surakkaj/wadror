<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% unless current_user.nil? %>
	<p><%= current_user.username %> signed in</p>
	<% end %>

	<div class="navbar">
		<%= link_to 'breweries', breweries_path %><br />
		<%= link_to 'beers', beers_path %>
		<%= link_to 'ratings', ratings_path %>
		<%= link_to 'users', users_path %>
		<%= link_to 'places', places_path %>
		<%= link_to 'styles', styles_path %>
		<% if current_user.nil? %>
		<%= link_to 'login', signin_path %>
		<% else %>
		<%= link_to 'signout', signout_path, method: :delete, data: { confirm: 'log out?' } %>
		<% end %>
	</div>

<%= yield %>

</body>
</html>
